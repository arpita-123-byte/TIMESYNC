<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tab text style with larger font size -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#0F172A</item>
        <item name="colorPrimaryDark">#0A0F1B</item>
        <item name="colorAccent">#1886EE</item>
        <item name="android:windowBackground">#0F172A</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenuTextAppearance</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextAppearance</item>
    </style>

    <!-- Custom popup menu style -->
    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">#E8EAED</item>
        <item name="android:textColor">#000000</item>
        <item name="android:popupElevation">8dp</item>
    </style>
    
    <!-- Popup menu item text color -->
    <style name="PopupMenuTextAppearance" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
</resources> 